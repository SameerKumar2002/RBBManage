<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bean_input_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/id_bean_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Sameer Kumar"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_bean_id_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="9091"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_bean_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Green Bean Bag"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/id_bean_name"
                app:layout_constraintTop_toBottomOf="@+id/id_bean_name" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/id_bean_bag_count"
                app:layout_constraintTop_toTopOf="@+id/id_bean_lbl"
                app:srcCompat="@drawable/ic_beans_svgrepo_com" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="VISS"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/id_bean_lbl" />

            <TextView
                android:id="@+id/id_bean_viss_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="55.5"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/id_bean_lbl" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Bag"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/id_bean_viss_count"
                app:layout_constraintTop_toTopOf="@+id/id_bean_lbl" />

            <TextView
                android:id="@+id/id_bean_bag_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="5"
                android:textColor="@android:color/secondary_text_light"
                android:textColorHint="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/id_bean_lbl" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/id_bean_phone"
                app:layout_constraintTop_toBottomOf="@+id/id_bean_lbl"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/id_bean_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="09970738758"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/id_bean_bag_count"
                app:layout_constraintTop_toBottomOf="@+id/id_bean_lbl" />

            <TextView
                android:id="@+id/id_bean_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="22/3/2002"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/id_bean_phone"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/id_bean_phone" />

            <TextView
                android:id="@+id/id_bean_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zyd"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/id_bean_lbl"
                app:layout_constraintTop_toTopOf="@+id/id_bean_date" />

            <Button
                android:id="@+id/id_bean_edit"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:fadingEdge="vertical"
                android:gravity="center|center_vertical"
                android:text="Edit"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_bean_date" />

            <Button
                android:id="@+id/id_bean_delete"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/darker_gray"
                android:fadingEdge="vertical"
                android:gravity="center|center_vertical"
                android:text="Delete"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/id_bean_edit"
                app:layout_constraintTop_toTopOf="@+id/id_bean_edit" />

            <Button
                android:id="@+id/id_bean_sell"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/myGreenColor"
                android:fadingEdge="vertical"
                android:gravity="center|center_vertical"
                android:text="Sell"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/id_bean_delete" />

            <TextView
                android:id="@+id/id_bean_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="small"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/id_bean_lbl"
                app:layout_constraintTop_toTopOf="@+id/id_bean_phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>